{{define "head"}}<title>Ensaluti &mdash; {{.SiteName}}</title>
<meta name="description" content="Log in to {{.SiteName}}.">
<meta itemprop="description" content="Log in to {{.SiteName}}.">
<style>input{margin-bottom:0.5em;}</style>
{{end}}
{{define "content"}}
<div class="tight content-container">
	<h1>Ensaluti al {{.SiteName}}</h1>

	{{if .Flashes}}<ul class="errors">
		{{range .Flashes}}<li class="urgent">{{.}}</li>{{end}}
	</ul>{{end}}

	<form action="/auth/login" method="post" style="text-align: center;margin-top:1em;" onsubmit="disableSubmit()">
		<input type="text" name="alias" placeholder="Uzantnomo" value="{{.LoginUsername}}" {{if not .LoginUsername}}autofocus{{end}} /><br />
		<input type="password" name="pass" placeholder="Pasvorto" {{if .LoginUsername}}autofocus{{end}} /><br />
		{{if .To}}<input type="hidden" name="to" value="{{.To}}" />{{end}}
		<input type="submit" id="btn-login" value="Ensaluti" />
	</form>

	{{if and (not .SingleUser) .OpenRegistration}}<p style="text-align:center;font-size:0.9em;margin:3em auto;max-width:26em;">{{if .Message}}{{.Message}}{{else}}<em>Ĉu vi ankoraŭ ne havas konton?</em> <a href="/">Aliĝu</a> por komenci blogon.{{end}}</p>{{end}}

<script type="text/javascript">
function disableSubmit() {
	var $btn = document.getElementById("btn-login");
	$btn.value = "Ensalutas...";
	$btn.disabled = true;
}
</script>
{{end}}
